{  
  "id":"/neo4j/replica",
  "cpus":{{neo4j-replica.cpus}},
  "mem":{{neo4j-replica.mem}},
  "instances":{{neo4j-replica.instances}},
  "disk": {{neo4j-replica.disk}},
  "container":{  
    "type":"DOCKER",
    "docker":{  
      "image":"neo4j/neo4j-dcos:1.0.0-3.1-RC1",
      "network":"USER",
      "volumes":[  
        {  
          "containerPath":"data",
          "mode":"RW",
          "persistent":{  
            "type":"root",
            "size":{{neo4j-replica.disk}}
          }
        },
        {  
          "containerPath":"/data",
          "hostPath":"data",
          "mode":"RW"
        }
      ]
    }
  },
  "env":{  
    "NEO4J_AUTH":"{{neo4j-replica.auth-username}}/{{neo4j-replica.auth-password}}",
    "NEO4J_dbms_mode":"READ_REPLICA"
  },
  "ipAddress":{  
    "networkName":"{{neo4j-replica.network-name}}"
  },
  "healthChecks":[
    {
      "protocol":"HTTP",
      "path":"/",
      "port":7474,
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ]
}