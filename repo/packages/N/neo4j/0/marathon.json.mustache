{  
  "id":"neo4j",
  "apps":[  
    {  
      "id":"core",
      "cpus":{{neo4j.core-cpus}},
      "mem":{{neo4j.core-mem}},
      "instances":{{neo4j.core-instances}},
      "disk": {{neo4j.core-disk}},
      "container":{  
        "type":"DOCKER",
        "docker":{  
          "image":"unterstein/dcos-neo4j:1.0.0-3.1-RC1",
          "network":"USER",
          "volumes":[  
            {  
              "containerPath":"data",
              "mode":"RW",
              "persistent":{  
                "type":"root",
                "size":{{neo4j.core-disk}}
              }
            },
            {  
              "containerPath":"/data",
              "hostPath":"data",
              "mode":"RW"
            }
          ]
        }
      },
      "env":{  
        "NEO4J_AUTH":"{{neo4j.auth-username}}/{{neo4j.auth-password}}",
        "NEO4J_dbms_mode":"CORE",
        "NEO4J_causalClustering_expectedCoreClusterSize":"{{neo4j.core-expected-cluster-size}}"
      },
      "ipAddress":{  
        "networkName":"{{neo4j.network-name}}"
      },
      "healthChecks":[
        {
          "protocol":"HTTP",
          "path":"/",
          "port":7474,
          "timeoutSeconds":10,
          "gracePeriodSeconds":240,
          "intervalSeconds":10,
          "maxConsecutiveFailures":10
        }
      ]
    },
    {  
      "id":"replica",
      "cpus":{{neo4j.replica-cpus}},
      "mem":{{neo4j.replica-mem}},
      "instances":{{neo4j.replica-instances}},
      "disk": {{neo4j.replica-disk}},
      "dependencies":[
        "/neo4j/core"
      ],
      "container":{  
        "type":"DOCKER",
        "docker":{  
          "image":"unterstein/dcos-neo4j:1.0.0-3.1-RC1",
          "network":"USER",
          "volumes":[  
            {  
              "containerPath":"data",
              "mode":"RW",
              "persistent":{  
                "type":"root",
                "size":{{neo4j.replica-disk}}
              }
            },
            {  
              "containerPath":"/data",
              "hostPath":"data",
              "mode":"RW"
            }
          ]
        }
      },
      "env":{  
        "NEO4J_AUTH":"{{neo4j.auth-username}}/{{neo4j.auth-password}}",
        "NEO4J_dbms_mode":"READ_REPLICA"
      },
      "ipAddress":{  
        "networkName":"{{neo4j.network-name}}"
      },
      "healthChecks":[
        {
          "protocol":"HTTP",
          "path":"/",
          "port":7474,
          "timeoutSeconds":10,
          "gracePeriodSeconds":240,
          "intervalSeconds":10,
          "maxConsecutiveFailures":10
        }
      ]
    }
  ]
}